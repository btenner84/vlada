{
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/analyze-universal", "destination": "/api/analyze-universal" },
    { "source": "/api/analyze-fallback", "destination": "/api/analyze-fallback" },
    { "source": "/api/process-bill", "destination": "/api/process-bill" }
  ],
  "redirects": [],
  "cleanUrls": true,
  "trailingSlash": false,
  "crons": [],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "npm install --platform=linux --arch=x64 sharp && npm install",
        "buildCommand": "npm run build"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "SHARP_IGNORE_GLOBAL_LIBVIPS": "1"
  }
} 
